{
    "name": "Marginalia",
    "manifest_version": 2,
    "version": "1.4",
    "description": "Write your notes in the margin of websites and store it in Google Docs.",
    "background":{
        "scripts": ["Row.js", "Spreadsheets.js", "Background.js"],
        "persistent": false

    },
    "options_page": "options.html",
    "icons": { "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://spreadsheets.google.com/*",
        "tabs",
	"clipboardWrite",
	"clipboardRead"
    ]
}